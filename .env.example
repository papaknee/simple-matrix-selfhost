# PostgreSQL Database Password
POSTGRES_PASSWORD=CHANGE_THIS_TO_A_STRONG_PASSWORD

# Matrix Server Domain (e.g., matrix.yourdomain.com)
MATRIX_DOMAIN=matrix.example.com

# Admin Email for Notifications and Let's Encrypt
ADMIN_EMAIL=admin@example.com

# Server Name (typically your main domain, e.g., yourdomain.com)
SERVER_NAME=example.com

# Registration Settings
# ENABLE_REGISTRATION: Allow users to create accounts (default: true)
# When enabled, anyone with the domain link can create a user profile
# Admin will receive email notifications for new user registrations
ENABLE_REGISTRATION=true

# Federation Settings
# ENABLE_FEDERATION: Allow this server to communicate with other Matrix servers (default: false)
# When disabled, this server operates in private/isolated mode
# When enabled, users can communicate with users on other Matrix servers (e.g., matrix.org)
ENABLE_FEDERATION=false

# Admin Console Credentials
ADMIN_CONSOLE_USERNAME=admin
ADMIN_CONSOLE_PASSWORD=CHANGE_THIS_PASSWORD
ADMIN_CONSOLE_SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_SECRET_KEY

# AWS S3 Backup Configuration (Optional)
# Uncomment and configure these to enable S3 backups
#AWS_ACCESS_KEY_ID=your-access-key-id
#AWS_SECRET_ACCESS_KEY=your-secret-access-key
#AWS_S3_BUCKET=your-backup-bucket-name
#AWS_REGION=us-east-1
